    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

    <script type="text/javascript" src="/data/edges.js"></script>
    <script type="text/javascript" src="/data/nodes.js"></script>
</head>
<style type="text/css">
    #mynetwork {
        width: 800px;
        height: 800px;
    }
</style>
<body>
<div class="ui container" style="height: 1200px">
    <div style="width: 15%; height: 600px; float: left; margin: 5px 5px 5px 5px">
        <h1>Movie Friends</h1>
    </div>
    <div style="width: 55%; height: 600px; float: left;">
        <div id="mynetwork"></div>
    </div>
    <div style="width: 25%; height: 600px; float: left;">
    </div>
</div>
</body>
<script type="text/javascript">

  var nodes = new vis.DataSet(nodes);
  var edges = new vis.DataSet(edges);
  var container = document.getElementById('mynetwork');
  var data = {
    nodes: nodes,
    edges: edges
  };
  var options = {};
  var network = new vis.Network(container, data, options);
  network.on('click', function (properties) {
    var ids = properties.nodes;
    var clickedNodes = nodes.get(ids);
    if (clickedNodes.length >= 1) {
      var movieId = clickedNodes[0].id;
      console.log(movieId);
      $(document).ready(function () {
        $.ajax({
          type: "GET",
          url: "/movie/"+movieId,
          dataType: "text",
          success: function (data) {
            console.log(data);
          }
        });
      });
    }
  });
</script>
</html>